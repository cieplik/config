[commit]
  verbose = true

[core]
  notesRef = refs/notes/hg

[difftool]
  prompt = false
  trustExitCode = true

[difftool "my-vimdiff"]
  path = vim
  cmd = "vim -d \"$LOCAL\" \"$REMOTE\""

[diff]
  tool = my-vimdiff

[pager]
  status = true

[push]
  default = upstream

[alias]
  ci     = commit
  co     = checkout
  cp     = cherry-pick
  dt     = difftool
  fa     = fetch --all
  ff     = merge --ff-only
  mb     = "!reviewmb() { git review $(git merge-base HEAD $1); }; reviewmb"
  mt     = mergetool
  review = !git-review.sh
  pr     = "!fetchpr() { git fetch $1 refs/pull/$2/head; }; fetchpr"
  st     = status
  ta     = log --oneline --decorate --graph --color --branches --remotes HEAD
  tb     = log --oneline --decorate --graph --color --branches
  ts     = log --oneline --decorate --graph --color --branches --remotes --simplify-by-decoration
  tt     = log --oneline --decorate --graph --color
  wt     = worktree

[user]
	name = cieplik
	email = dcieplin@gmail.com

[url "https://"]
	insteadOf = git://

